{
    "branches": [
        {
            "name": "main"
        },
        {
            "name": "milestone/*",
            "prerelease": "rc"
        }
    ],
    "tagFormat": "${version}",
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json"
                ]
            }
        ],
        [
            "@semantic-release/gitlab",
            {
                "gitlabUrl": "https://gitlab.com"
            }
        ]
    ]
}